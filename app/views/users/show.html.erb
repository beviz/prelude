<table class="table table-hover">
	<tr>
		<th>用户邮箱</th><td><%= @user.email %></td>
	</tr>
	<tr>
		<td><%= f.input :login, :disabled => true %></td>
	</tr>
	<tr>
		<td><%= f.input :domain, :disabled => true %></td>
	</tr>
	<tr>
		<td>
			<%= f.input :binds, :collection => @user.rents.where(:end_at => nil) %>
		</td>
		<td><%= f.input :portal, :disabled => true %></td>
	</tr>
</table>

<table>
	<%= simple_form_for(@user) do |f| %>
	<tr>
		<td>
			<div class="form-actions">
			<% if current_user.admin? %>
				<%= f.button :submit, "生成新的序列好并更新", class: "btn btn-primary" %>
			<% end %>
				<%= return_link(root_url) %>
			</div>
		</td>
	</tr>
	<% end %>
</table>
