<table class="table table-striped">
	<tr>
		<td>用户名</td>
		<td>剩余流量</td>
		<td>操作</td>
	</tr>
	<% @users.each do |user| %>
	<tr>
		<td><%= user.login %></td>
		<td>剩余流量</td>
		<td>
			<%= link_to "详细", user_statistics_path(user)%>
			<%= link_to "更换端口", user_path(user, :ok_url => request.url) %>
			<%= link_to "删除", user_path(user), :method => :delete, :confirm => "确定删除该用户?" %>
		</td>
	</tr>
	<% end %>
</table>

<nav>
	<%= paginate(@users, :theme => 'twitter-bootstrap') if !@users.empty? %>
</nav>
